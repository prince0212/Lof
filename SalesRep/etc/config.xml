		<salesrep>
			<general>
				<show_assign_tab>1</show_assign_tab>
				<show_order_assign_tab>1</show_order_assign_tab>
				<see_other_dealers>1</see_other_dealers>
				<see_other_dealers_order>1</see_other_dealers_order>
